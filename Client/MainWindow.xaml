<Window x:Class="SignalRClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SignalRClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Margin="128,217,128,23" Name="messagesList" RenderTransformOrigin="0.417,0.663" Grid.ColumnSpan="2" />
        <TextBox Name="userTextBox" Width="200" MaxLength="100" Height="60" Background="AntiqueWhite" HorizontalAlignment="Center" Margin="0,47,0,0" VerticalAlignment="Top" Grid.Column="1" />
        <TextBox Name="messageTextBox" Width="200" MaxLength="100" Height="60" Background="AntiqueWhite" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" Grid.Column="1" />

        <Button Click="sendButton_Click" Name="sendButton" Background="Blue" Width="100" Margin="533,98,167,292" Grid.ColumnSpan="2">SEND</Button>

    </Grid>
</Window>
