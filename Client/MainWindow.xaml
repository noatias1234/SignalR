<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox Margin="10,13,0,10" Name="messagesList" ></ListBox>
        <TextBox Name="userTextBox" Width="200" MaxLength="100" Height="60" Background="AntiqueWhite" HorizontalAlignment="Center" Margin="0,47,0,0" VerticalAlignment="Top" />
        <TextBox Name="messageTextBox" Width="200" MaxLength="100" Height="60" Background="AntiqueWhite" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" />
      
        <Button Click="sendButton_Click" Name="sendButton" Background="Blue" Width="100" Margin="355,219,345,171">SEND</Button>

    </Grid>
</Window>
